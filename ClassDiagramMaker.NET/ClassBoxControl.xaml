<UserControl x:Class="ClassDiagramMaker.NET.ClassBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClassDiagramMaker.NET"
             mc:Ignorable="d" 
             >
    <DockPanel  Background="White">
        <TextBox FontFamily="Segoe Print" DockPanel.Dock="Top" Padding="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF51595D" Foreground="#FFF6F5F5">
            Class Name
        </TextBox>
        <StackPanel Orientation="Vertical" x:Name="VariablePanel" DockPanel.Dock="Top" MinHeight="30">
            <Button x:Name="AddBtn" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="4,5,0,0" HorizontalAlignment="Left" MinWidth="20" FontWeight="ExtraBold" Background="LightGreen" Click="ButtonAddVariable_Click">+</Button>
        </StackPanel>
        <StackPanel x:Name="FuntionPanel" DockPanel.Dock="Top">
        </StackPanel>
    </DockPanel>
</UserControl>
